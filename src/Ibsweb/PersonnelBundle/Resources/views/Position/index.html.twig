{% extends 'base.html.twig' %}

{% block body %}
  <h1>Positions</h1>
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Rank</th>
      <th></th>
      <th></th>
    </tr>
    {% for position in positions %}
      <tr>
        <td>{{position.title}}</td>
        <td>{{position.rank}}</td>
        <td><a href="{{ path('position_update', {'id':position.id}) }}">Edit</a><td>
        <td><a href="{{ path('position_delete', {'id':position.id}) }}">Delete</a><td>
      </tr>
    {% endfor %}
  </table>
  <a href="{{ path('position_new') }}">New Position</a>
{% endblock %}
